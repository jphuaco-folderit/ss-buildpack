#!/bin/bash
# This script compiles the app based on the DEPLOY_TARGET environment variable

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${GREEN}-----> Custom Buildpack Starting${NC}"

# Get the deploy target from environment variable
DEPLOY_TARGET=${DEPLOY_TARGET:-"frontend"}

echo -e "${YELLOW}-----> Deploy Target: $DEPLOY_TARGET${NC}"

if [ "$DEPLOY_TARGET" = "frontend" ]; then
  echo -e "${GREEN}-----> Deploying Frontend (Streamlit)${NC}"
  
  # Copy frontend-specific files
  cp Procfile.frontend Procfile
  cp app.json.frontend app.json
  
  # Set Streamlit-specific environment variables
  export STREAMLIT_SERVER_HEADLESS=true
  export STREAMLIT_SERVER_PORT=$PORT
  export STREAMLIT_SERVER_ADDRESS=0.0.0.0
  
elif [ "$DEPLOY_TARGET" = "backend" ]; then
  echo -e "${GREEN}-----> Deploying Backend (FastAPI)${NC}"
  
  # Copy backend-specific files
  cp Procfile.backend Procfile
  cp app.json.backend app.json
  
else
  echo -e "${RED}-----> Error: Unknown DEPLOY_TARGET: $DEPLOY_TARGET${NC}"
  echo -e "${RED}-----> Valid options: 'frontend' or 'backend'${NC}"
  exit 1
fi

echo -e "${GREEN}-----> Buildpack compilation complete${NC}"